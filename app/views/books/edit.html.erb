<h1>Editing Book</h1>

<!--　errorメッセージ -->

  <% if @book.errors.any? %>
    <div id="error_explantion">
      <h2><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>



<!-- form_with部分  -->
<%= form_with model:@book, local:true do |f| %>
  <div class="field">
    <%= f.label :title, "Title" %>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :body, "Body" %>
    <%= f.text_area :body %>
  </div>
  <div class="action">
    <%= f.submit 'Update Book'%>
  </div>
<% end %>
<%= link_to "Show", book_path(@book) %>
