<p id="notice"></p>
<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
        <th>Body</th>
        <th></th>
      </tr>
  </thead>

    <% @books.each do |book| %>
      <tbody>
        <tr>
          <td><%= book.title%></td>
          <td><%= book.body %></td>
          <td><%= link_to "Show", book_path(book) %></td>
          <td><%= link_to "Edit", edit_book_path(book) %></td>
          <td><%= link_to "Destroy", book_path(book), method: :delete, "data-confirm" => "Are you sure?" %></td>
        </tr>
      </tbody>
    <% end %>
  </table>


<h2>New Book</h2>
<!--　errorメッセージ -->

  <% if @book.errors.any? %>
    <div id="error_explantion">
      <h2><%= pluralize(@book.errors.count, "error") %> prohibited this book from being saved:</h2>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<%= form_with model:@book, local:true do |f| %>
<!-- form_with部分  -->
  <div class="field">
    <%= f.label :title, "Title" %>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :body, "Body" %>
    <%= f.text_area :body %>
  </div>
  <div class="action">
    <%= f.submit 'Create Book'%>
  </div>
<% end %>
